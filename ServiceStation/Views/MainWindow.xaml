    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="Column" Width="{Binding WidthOfNavigationPanel, Mode=OneWay}" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0"
                    Background="Red"
                    HorizontalAlignment="Stretch">
            <Button Command="{Binding MoveNavigationPanelCommand}"
                    Background="Blue"
                    Style="{StaticResource PageNavigationButton}" />
            <Button Command="{Binding A}"
                    Background="BlueViolet"
                    Style="{StaticResource PageNavigationButton}" />
            <Button Style="{StaticResource PageNavigationButton}" />
        </StackPanel>

        <Frame Grid.Column="1">

        </Frame>
    </Grid>
